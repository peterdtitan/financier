<div class="flex flex-col w-full items-center justify-between">
  <h2 class="p-4 bg-blue-600 w-full flex items-center justify-center text-white text-xl">LOG IN</h2>

  <div class="flex flex-col mt-8 w-full px-8">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="mt-4 w-full">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: 'w-full' %>
        </div>
    
      <div class="mt-4 w-full">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Password', class: 'w-full'  %>
      </div>
    
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
    
      <div class="mt-4 w-full">
        <div class='flex items-center justify-center bg-emerald-300 hover:bg-emerald-600 p-2 cursor-pointer'>
          <%= f.submit "LOG IN", class: 'cursor-pointer' %>
        </div>
      </div>
    <% end %>
  </div>
  
  <div class="mt-4 w-full px-8 cursor-pointer">
    <div class='flex items-center justify-center bg-red-300 hover:bg-red-500 p-2 cursor-pointer'>
      <%= link_to "SIGN UP", new_registration_path(resource_name) %>
    </div>
  <div>
</div>
